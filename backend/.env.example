# Django Backend Environment Variables

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
DJANGO_SETTINGS_MODULE=backend.settings

# Database Configuration (use DATABASE_URL for production)
DATABASE_URL=postgresql://user:password@localhost:5432/ratesmart

# Security Settings
DJANGO_SECURE_SSL_REDIRECT=True

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://your-frontend.vercel.app

# Superuser Creation (optional)
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password

# Render.com specific (auto-provided)
RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com
RENDER_INTERNAL_HOSTNAME=your-app
PORT=10000

# Vercel.com specific (auto-provided)
VERCEL_URL=your-app.vercel.app